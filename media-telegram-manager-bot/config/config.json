                "allowedaudio": {
                    "contains": [ "RU", "Rus", "ru", "rus", "Рус", "ру", "рус", "Россия", "россия" ]
                }
            },
            "tv": {
                "resolutions": [ "720p", "1080p" ],
                "allowedsubs": {
                    "contains": [ "RU", "Rus", "ru", "rus", "Рус", "ру", "рус", "Россия", "россия" ]
                },
                "allowedaudio": {
                    "contains": [ "RU", "Rus", "ru", "rus", "Рус", "ру", "рус", "Россия", "россия" ]
                }
            }
        }
    },
    "categories": {
        "movies": {
            "ext":  [ ".mov", ".avi", ".mkv", ".mp4" ],
            "filenameProcessor": "return `${name}${i === 0 ? '' : ' ' + i}${ext}`",
            "name": "Фильмы"
        },
        "tv": {
            "ext":  [ ".mov", ".avi", ".mkv", ".mp4" ],
            "name": "Сериалы",
            "filenameProcessor": "return `${name}E${i < 10 ? '0' + i : i}`",
            "additional": {
                "message": "Введите номер сезона от 0 до 99.",
                "processor": "return `Season ${input.length !== 2 ? input.padStart(2, '0'}` : input) + ext",
                "schema": {
                    "minLength": 1,
                    "maxLength": 2,
                    "pattern": "^\\d+$",
                    "type": "string"
                }
            }
        },
        "music": {
            "ext":  [ ".mp3", ".flac" ],
            "name": "Музыка",
            "filenameProcessor": "return filename + ext",
            "additional": {
                "message": "Введите наименование альбома.",
                "processor": "return input",
                "schema": {
                    "minLength": 3,
                    "maxLength": 100,
                    "type": "string"
                }
            }
        }
    }
